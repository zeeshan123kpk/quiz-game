  <script>
    // â”€â”€â”€ STORE & CONVERT â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    function loadStore(){
      let html=`<h3>Your Coins: ${coins}</h3>`;
      store.forEach(i=>{
        const owned = localStorage.getItem('item_'+i.name);
        html+=`<div class="store-item">
          ${i.name} ${owned?'âœ…':`<button onclick="buyItem('${i.name}',${i.price})">Buy</button>`}<br>
          Price: ${i.price} coins
        </div>`;
      });
      document.getElementById('storeItems').innerHTML=html;
    }
    function loadConvert(){
      let html=`<h3>Your Coins: ${coins}</h3>`;
      store.forEach(i=>{
        html+=`<div class="store-item">
          ${i.name}<br>
          <button onclick="convertItem('${i.name}',${i.price})">Convert for ${i.price} coins</button>
        </div>`;
      });
      document.getElementById('convertItems').innerHTML=html;
    }
    function buyItem(name,price){
      if(coins<price) return alert("Not enough coins!");
      coins-=price; localStorage.setItem('coins',coins);
      localStorage.setItem('item_'+name,'owned');
      playSound('clickSound');
      updateCoinDisplay();
      loadStore();
    }
    function convertItem(name,price){
      buyItem(name,price);
      loadConvert();
    }

    // â”€â”€â”€ BET GAME â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    const riddles = [
      {q:"ÙˆÛ Ú©ÙˆÙ† Ø³ÛŒ Ú†ÛŒØ² ÛÛ’ Ø¬Ùˆ Ø§ÙÚ‘ØªÛŒ ÛÛ’ Ù…Ú¯Ø± Ù¾Ø± Ù†ÛÛŒÚº Ø±Ú©Ú¾ØªÛŒØŸ",a:"ÛÙˆØ§"},
      {q:"ÙˆÛ Ú©ÛŒØ§ ÛÛ’ Ø¬Ùˆ Ú¯Ø±Ù… Ú©Ø±Ù†Û’ Ø³Û’ Ø¬Ù… Ø¬Ø§ØªØ§ ÛÛ’ØŸ",a:"Ø§Ù†ÚˆØ§"},
      {q:"Ø§ÛŒØ³ÛŒ Ú©ÙˆÙ† Ø³ÛŒ Ú†ÛŒØ² ÛÛ’ Ø¬Ùˆ Ù¾Ø§Ù†ÛŒ Ù…ÛŒÚº Ø¨Ú¾ÛŒÚ¯Ù†Û’ Ø³Û’ Ù†ÛÛŒÚº Ø¨Ú¾ÛŒÚ¯ØªÛŒØŸ",a:"Ù¾ÛŒØ§Ø³"},
      {q:"ÙˆÛ Ú©ÙˆÙ† Ø³Ø§ Ø¯Ø±Ø®Øª ÛÛ’ Ø¬Ø³ Ú©Ø§ Ù¾Ú¾Ù„ Ø²Ù…ÛŒÙ† Ú©Û’ Ø§Ù†Ø¯Ø± ÛÙˆØªØ§ ÛÛ’ØŸ",a:"Ù…ÙˆÙ†Ú¯ Ù¾Ú¾Ù„ÛŒ"},
      {q:"ÙˆÛ Ú©ÛŒØ§ ÛÛ’ Ø¬Ùˆ Ø¢Ù¾ Ú©Û’ Ù¾Ø§Ø³ ÛÙˆ ØªÙˆ Ø¢Ù¾ Ú©Ø§ Ù†Ø§Ù… Ù†ÛÛŒÚº Ù„Û’ Ø³Ú©ØªÛ’ØŸ",a:"Ø®Ø§Ù…ÙˆØ´ÛŒ"},
